<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.careye.fragment.SettingFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorlinehuicc" />

            <FrameLayout
                android:id="@+id/fl_carsettings_carnumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_grid_selector"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:text="用户名"
                    android:textColor="@color/black"

                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center|right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_carsettings_carnumber"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:maxEms="11"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/main_texthui"
                            android:textSize="12sp" />

                        <!-- <ImageView -->
                        <!-- android:layout_width="15dp" -->
                        <!-- android:layout_height="15dp" -->
                        <!-- android:layout_marginLeft="4dp" -->
                        <!-- android:src="@drawable/ri_jiantou" /> -->
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ri_jiantou"
                    android:visibility="gone" />
            </FrameLayout>
            <!-- 000 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorlinehuicc" />
            <!-- version -->
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_grid_selector"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:text="版本号"
                    android:textColor="@color/black"

                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center|right"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_carsettings_version"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"

                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/main_texthui"
                            android:textSize="12sp" />


                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ri_jiantou"
                    android:visibility="gone" />
            </FrameLayout>
            <!-- 000 -->



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="1px"
                    android:background="@color/color_line_huidan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorlinehuicc" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/colorlinehuicc"
                android:visibility="gone" />


            <!-- 000 -->

            <LinearLayout
                android:id="@+id/MenuSez_ll_one_addfour"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_grid_selector"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                >

                <EditText
                    android:id="@+id/et_pleace_inputinfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:hint=""
                    android:textColor="#3e3e3e"
                    android:textColorHint="@color/color_line_hui"
                    android:background="@color/coloralf"
                    android:textSize="15sp" />
                <LinearLayout
                    android:id="@+id/ll_ivsearch_delalltext"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/iv_ivsearch_delalltext"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ri_jiantou"
                        android:visibility="invisible"
                        />


                </LinearLayout>
            </LinearLayout>
            <!-- 000 -->
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:background="@color/colorlinehuicc" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_line_huidan"
                android:layout_marginTop="80dp"
                />

            <Button
                android:id="@+id/btn_taguser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_margin="20dp"
                android:text="切换账号" />

        </LinearLayout>
    </ScrollView>


    </LinearLayout>
