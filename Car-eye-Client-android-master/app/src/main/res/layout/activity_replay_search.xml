            <LinearLayout
                android:id="@id/playback_layout_date"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/bg_more_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="left|center"
                    android:paddingLeft="10.0dip"
                    android:text="@string/track_date"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/settings_section_key_size" />

                <TextView
                    android:id="@id/playback_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11.0dip"
                    android:maxLength="16"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/playback_layout_begin_time"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/bg_more_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
